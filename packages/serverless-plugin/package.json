{
  "name": "serverless-plugin-chrome",
  "version": "1.0.0-11",
  "description": "A Serverless-framework plugin that takes care of running headless Chrome so that you can move on with getting things done.",
  "keywords": [
    "serverless",
    "serverless-framework",
    "chrome",
    "chromium",
    "headless",
    "aws",
    "lambda"
  ],
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "files": [
    "dist",
    "src",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "test": "npm run lint && nyc ava",
    "test:docker": "docker run -v \"$PWD\":/var/task lambci/lambda:nodejs6.10 test/handler.test",
    "watch:test": "ava --watch",
    "ava": "ava",
    "lint": "npm run lint:eslint -s",
    "lint:eslint": "eslint $npm_package_config_jsSrc",
    "coverage": "nyc report",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "prepublish": "rm -Rf dist/ && yarn build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adieuadieu/serverless-chrome.git"
  },
  "author": "Marco LÃ¼thy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/adieuadieu/serverless-chrome/issues"
  },
  "homepage": "https://github.com/adieuadieu/serverless-chrome/tree/master/packages/serverless-plugin",
  "dependencies": {
    "@serverless-chrome/lambda": "^1.0.0-5",
    "fs-p": "^2.0.0",
    "globby": "^6.1.0"
  },
  "devDependencies": {
    "ava": "^0.21.0",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.24.1",
    "chrome-launcher": "^0.3.1",
    "prettier": "^1.5.3",
    "prettier-eslint": "^6.4.2",
    "rollup": "^0.45.2",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-node-resolve": "^3.0.0"
  },
  "ava": {
    "require": "babel-register",
    "babel": "inherit"
  },
  "babel": {
    "sourceMaps": true,
    "presets": [
      [
        "env",
        {
          "modules": "commonjs",
          "targets": {
            "node": "6.10"
          }
        }
      ]
    ]
  }
}
